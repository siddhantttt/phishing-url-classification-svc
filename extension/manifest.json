{
    "manifest_version": 3,
    "name": "Override Link Hover",
    "version": "1.0",
    "description": "Overrides the hover effects on links across all websites.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": [
      "*://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  